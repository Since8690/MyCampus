<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_bg"
        android:elevation="4dp"
        android:gravity="center">

    <TextView
        style="@style/white_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地大欢迎您"
        android:transitionName="news_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--总布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--左侧布局-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_xiaozhangzhici"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#dd39D38C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_xiaozhangzhici"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:transitionName="ll_news">

                        <TextView
                            android:id="@+id/tv_xiaozhangzhici"
                            style="@style/white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="校长致辞"
                            android:transitionName="news_title"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_xuexiaojianjie"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#dd39D38C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_xuexiaojianjie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:transitionName="ll_news">

                        <TextView
                            android:id="@+id/tv_xuexiaojianjie"
                            style="@style/white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学校简介"
                            android:transitionName="news_title"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--右侧布局-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_lishiyange"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#dd39D38C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_lishiyange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:transitionName="ll_news">

                        <TextView
                            android:id="@+id/tv_lishiyange"
                            style="@style/white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="历史沿革"
                            android:transitionName="news_title"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_xinshengzhinan"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#dd39D38C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_xinshengzhinan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:transitionName="ll_news">

                        <TextView
                            android:id="@+id/tv_xinshengzhinan"
                            style="@style/white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新生指南"
                            android:transitionName="news_title"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
